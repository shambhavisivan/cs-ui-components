{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es2015",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "declarationDir": "./lib",
        "sourceMap": false,
        "esModuleInterop": true,
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true
    },
    "include": [
        "./main.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./test/**/*.tsx",
        "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}