{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        // These settings should remain unchanged
        "no-tabs": "off",
        "no-undef": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "max-len": "off",
        "indent": ["error", "tab", { "ignoreComments": true }],
        "object-curly-newline": ["error", { "consistent": true, "multiline":  true }],
        "react/jsx-props-no-spreading": "off",
        "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "react/jsx-indent": ["error", "tab", { "checkAttributes": true, "indentLogicalExpressions": true }],
        "react/jsx-indent-props": ["error", "tab"],
        "jsx-a11y/label-has-associated-control": ["error", { "required": { "some": ["nesting", "id"]}}],
        "jsx-a11y/no-autofocus": ["off"],
        "import/extensions": ["error", "never", { "svg": "always" }],
        "no-unused-vars": ["off"],
        "@typescript-eslint/no-unused-vars": ["error", { "ignoreRestSiblings": true }],
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": ["error"],
        "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/setupTests.ts", "**/*.spec.tsx", "**/*.spec.ts"]}],
        "react/static-property-placement": ["error", "static public field"],
        // These warnings should be revisited and preferably resolved
        "prefer-const": ["warn"],
        "no-underscore-dangle": ["warn"],
        "react/destructuring-assignment": ["warn"],
        "jsx-a11y/click-events-have-key-events": ["warn"]
    },
    "settings": {
        "import/resolver": {
            "node": {"extensions": [".js", ".jsx", ".ts", ".tsx"]}
        }
    }
}
