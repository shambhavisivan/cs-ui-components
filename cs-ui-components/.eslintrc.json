{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        // These settings should remain unchanged
        "no-tabs": "off",
        "no-undef": "off",
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "max-len": "off",
        "indent": ["error", "tab", { "ignoreComments": true }],
        "object-curly-newline": ["error", { "consistent": true, "multiline":  true }],
        "react/jsx-props-no-spreading": "off",
        "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "react/jsx-indent": ["error", "tab", { "checkAttributes": true, "indentLogicalExpressions": true }],
        "react/jsx-indent-props": ["error", "tab"],
        "jsx-a11y/label-has-associated-control": ["error", { "required": { "some": ["nesting", "id"]}}],
        "import/extensions": ["error", "never", { "svg": "always" }],
        // These warnings should be revisited and preferably resolved
        "consistent-return": ["warn"],
        "default-case": ["warn"],
        "prefer-const": ["warn"],
        "no-use-before-define": ["warn", { "functions": true, "classes": true }],
        "no-unused-vars": ["warn"],
        "no-underscore-dangle": ["warn"],
        "no-nested-ternary": ["warn"],
        "no-restricted-globals": ["warn"],
        "no-lone-blocks": ["warn"],
        "no-param-reassign": ["warn"],
        "import/no-extraneous-dependencies": ["warn", { "devDependencies": false, "optionalDependencies": false, "peerDependencies": false }],
        "import/no-unresolved": ["warn"],
        "import/no-webpack-loader-syntax": ["warn"],
        "react/static-property-placement": ["warn"],
        "react/button-has-type": ["warn"],
        "react/destructuring-assignment": ["warn"],
        "react/no-array-index-key": ["warn"],
        "jsx-a11y/mouse-events-have-key-events": ["warn"],
        "jsx-a11y/role-supports-aria-props": ["warn"],
        "jsx-a11y/click-events-have-key-events": ["warn"],
        "jsx-a11y/no-noninteractive-element-interactions": ["warn"],
        "jsx-a11y/no-autofocus": ["warn"]
    }
}
