{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"declaration": true,
		"typeRoots": ["src/typings"],
		"outDir": "./dist/",
		"sourceMap": true,
		"jsx": "react",
		"allowJs": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
